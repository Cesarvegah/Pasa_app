<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout1"
    tools:context="pasa.inventarios.com.Activity_Consulta_Inventario_Diario"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_marginTop="95dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/lin_Btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140sp"
            android:text="@string/division_consulta_inventario_diario"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="90sp"
            android:text="@string/Fecha_consulta_inventario_diario"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140sp"
            android:layout_marginTop="30dp"
            android:id="@+id/txtView_Division"
            android:text="@string/division_consulta_inventario_diario"
            android:textColor="@color/contents_text"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="90sp"
            android:layout_marginTop="30dp"
            android:textSize="13sp"
            android:id="@+id/editText_Fecha"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btn_search"
            android:src="@drawable/ic_buscar"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="175dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/lin_Btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_mostrar"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:text="Mostrar todos los registros"/>
        <Button
            android:id="@+id/btn_Sincronizacion"
            android:layout_alignParentEnd="true"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Sincronizar"
            android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_AddEditTextEscaner"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

    <!--
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    -->

</android.support.v4.widget.DrawerLayout>