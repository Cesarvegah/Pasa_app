<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout1"
    tools:context="pasa.inventarios.com.Activity_Consulta_Inventario_Diario"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="30dp"
        android:id="@+id/lin_Main"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="0.94">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Almacén:"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"/>
            <Spinner
                android:id="@+id/spn_Almacen"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_personalizado"
                android:prompt="@string/prompt_Division"
                android:spinnerMode="dropdown">
            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="190sp"
                android:text="Folio De Inventario"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="190sp"
                android:text="División"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="190sp"
                android:id="@+id/txtView_Folio"
                android:text="txtView_Folio"
                android:textSize="14sp"
                android:textColor="@color/contents_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="200sp"
                android:id="@+id/txtView_Division"
                android:text="txtView_Division"
                android:textSize="14sp"
                android:textColor="@color/contents_text"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="70sp"
            android:text="@string/Fecha_consulta_inventario_diario"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="120sp"
            android:layout_marginTop="30dp"
            android:textSize="13sp"
            android:id="@+id/editText_Fecha"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btn_search"
            android:src="@drawable/ic_buscar"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_Btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_mostrar"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:text="Mostrar todos los registros"/>
        <Button
            android:id="@+id/btn_Sincronizacion"
            android:layout_alignParentEnd="true"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Sincronizar"
            android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/lin_AddEditTextEscaner"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>