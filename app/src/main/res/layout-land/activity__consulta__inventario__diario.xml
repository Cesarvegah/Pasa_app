<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout1"
    tools:context="pasa.inventarios.com.Activity_Consulta_Inventario_Diario"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    -->
    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/lin_Btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="190sp"
            android:text="@string/division_consulta_inventario_diario"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="100sp"
            android:text="@string/Fecha_consulta_inventario_diario"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180sp"
            android:id="@+id/txtView_Division"
            android:text="@string/division_consulta_inventario_diario"
            android:textColor="@color/contents_text"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="180sp"
            android:textSize="12sp"
            android:id="@+id/editText_Fecha"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_marginTop="-20dp"
            android:id="@+id/btn_search"
            android:src="@drawable/ic_buscar"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="155dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/lin_Btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_mostrar"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Mostrar todos los registros"/>
        <Button
            android:id="@+id/btn_Sincronizacion"
            android:layout_marginLeft="50sp"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Sincronizar" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_AddEditTextEscaner"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
    <!--
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_height="wrap_content">
        <ListView android:id="@+id/LstOpciones"
            android:layout_swidth="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    -->
    <!-- <include layout="@layout/contenido_actividad_lista"/> -->

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>